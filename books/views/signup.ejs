<%- include('./partials/loginHeader') %>
<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-md">
    <h1 class="text-4xl font-bold text-gray-900 mb-6 text-center">Регистрация</h1>
    <form class="space-y-6" id="form">
      <div>
        <label for="username" class="block font-semibold mb-1 text-gray-700">Логин</label>
        <input type="text" id="username" name="username" required
          class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500" />
      </div>
      <div>
        <label for="password" class="block font-semibold mb-1 text-gray-700">Пароль</label>
        <input type="password" id="password" name="password" required
          class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500" />
      </div>
        <div class="text-center">
          <a href="/login" class="text-green-600 hover:underline font-semibold">Вход</a>
        </div>
      <div>
        <button id="submit"
          class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded transition">
          Зарегистрироваться
        </button>
      </div>
    </form>
  </div>
</div>
<script src="/js/pages/loginPage.js" type="module"></script>
</body>
</html>

<%- include('./partials/header') %>
<div class="max-w-[700px] mx-auto p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-4xl font-bold text-gray-900 mb-6">Создание книги</h1>

  <form class="space-y-6" id="create-form">
    <!-- Название -->
    <div>
      <label for="title" class="block font-semibold mb-1 text-gray-700">Название</label>
      <input type="text" id="title" name="title" value="" required
        class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500" />
    </div>

    <!-- Автор -->
    <div>
      <label for="authors" class="block font-semibold mb-1 text-gray-700">Автор</label>
      <input type="text" id="authors" name="authors" value="" required
        class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500" />
    </div>

    <!-- Описание -->
    <div>
      <label for="description" class="block font-semibold mb-1 text-gray-700">Описание</label>
      <textarea id="description" name="description" rows="5" required
        class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500"></textarea>
    </div>

    <!-- Загрузка -->
    <div>
      <label for="file" class="block font-semibold mb-1 text-gray-700">Загрузить файл</label>
      <input type="file" id="file" name="file" required
        accept=".pdf, .epub, .mobi"
        class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500" />
    </div>

    <!-- Избранное -->
    <div class="flex items-center space-x-3">
      <input type="checkbox" id="favorite" name="favorite" value="true" class="h-5 w-5 text-green-600 focus:ring-green-500 border-gray-300 rounded" />
      <label for="favorite" class="font-semibold text-gray-700 select-none">Избранное</label>
    </div>

    <!-- Кнопка отправки -->
    <div>
      <button type="submit" id="submit-form"
        class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded transition">
        Создать
      </button>
    </div>
  </form>
</div>

<script src="/js/pages/createPage.js" type="module"></script>
</body>
</html>
